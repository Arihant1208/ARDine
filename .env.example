# ============================================================
# ARDine Environment Variables
# Copy to .env for docker-compose, or .env.local for local dev
# ============================================================

# --- AI (required) ---
GEMINI_API_KEY=your-gemini-api-key-here

# --- PostgreSQL ---
POSTGRES_USER=ardine
POSTGRES_PASSWORD=ardine_secret
POSTGRES_DB=ardine
DATABASE_URL=postgresql://ardine:ardine_secret@db:5432/ardine

# --- Redis (BullMQ job queue) ---
REDIS_URL=redis://redis:6379

# --- S3-Compatible Object Storage (MinIO locally, S3/GCS/Azure Blob in prod) ---
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET_IMAGES=dish-images
S3_BUCKET_MODELS=dish-models
# Set to "true" when using MinIO or any non-AWS S3-compatible store
S3_FORCE_PATH_STYLE=true

# --- ClamAV (malware scanning) ---
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# --- Backend ---
PORT=4000
CORS_ORIGIN=http://localhost

# --- OpenTelemetry ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# --- Cloud-specific (uncomment as needed) ---
# APPLICATIONINSIGHTS_CONNECTION_STRING=  # Azure Monitor
# AWS_REGION=us-east-1                    # AWS X-Ray
# GCP_PROJECT_ID=my-project              # GCP Cloud Trace

# --- Public URL for blob storage (used in stored URLs) ---
# Local: http://localhost/storage  (Nginx proxies to MinIO)
# Prod:  https://cdn.yourdomain.com or cloud storage URL
STORAGE_PUBLIC_URL=http://localhost/storage
